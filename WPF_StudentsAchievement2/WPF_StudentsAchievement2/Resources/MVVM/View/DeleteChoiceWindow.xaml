<Window x:Class="WPF_StudentsAchievement2.Resources.MVVM.View.DeleteChoiceWindow"
        Icon="/Resources/Images/Logo.png"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_StudentsAchievement2.Resources.MVVM.View"
        xmlns:viewModel="clr-namespace:WPF_StudentsAchievement2.Resources.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="DeleteChoiceWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Window.DataContext>
        <viewModel:DeleteChoiceViewModel/>
    </Window.DataContext>
    <Grid>
        <Border Background="LightSlateGray">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition/>
                    <RowDefinition Height="0.1*"/>
                </Grid.RowDefinitions>
                <Button Name="BackButton"
                        Grid.Row="3"
                        HorizontalAlignment="Left" 
                        Style="{StaticResource DeleteBackButton}"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border Background="#8B0000"
                            Grid.RowSpan="2">
                        <TextBlock Name="ActionTextBlock"
                                   Text="УДАЛИТЬ"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   FontSize="45"
                                   Margin="5"/>
                    </Border>
                    <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                        <Button Name="HideButton"
                            Width="25"
                            Style="{StaticResource HideButton}">
                        </Button>
                        <Button Name="ExitButton"
                            Width="25"
                            Style="{StaticResource ExitButton}">
                        </Button>
                    </StackPanel>
                </Grid>
                <Border Grid.Row="1"
                        Background="#DC143C">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button Name="GradeButton"
                                Content="Оценку"
                                Command="{Binding DeleteGradeViewCommand}"
                                Style="{StaticResource DeleteChoiceWindowButton}"/>
                        <Button Name="GroupButton"
                                Content="Группу"
                                Command="{Binding DeleteGroupViewCommand}"
                                Style="{StaticResource DeleteChoiceWindowButton}"/>
                        <Button Name="StudentButton"
                                Content="Студента"
                                Command="{Binding DeleteStudentViewCommand}"
                                Style="{StaticResource DeleteChoiceWindowButton}"/>
                        <Button Name="DisciplineButton"
                                Content="Дисциплину"
                                Command="{Binding DeleteDisciplineViewCommand}"
                                Style="{StaticResource DeleteChoiceWindowButton}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="2">
                    <ContentControl Content="{Binding CurrentView}"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
