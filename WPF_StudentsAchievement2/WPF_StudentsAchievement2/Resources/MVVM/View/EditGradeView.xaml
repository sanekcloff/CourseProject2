<UserControl x:Name="GradeViewControl" x:Class="WPF_StudentsAchievement_Project.Resources.MVVM.View.EditGradeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_StudentsAchievement_Project.Resources.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="GradeViewControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center">
                <TextBlock Text="ГРУППА"
                           Style="{StaticResource ActionWindowTextBlock}"/>
                <ComboBox Name="GroupComboBox" DropDownClosed="GroupComboBox_DropDownClosed"/>
                <TextBlock Text="СТУДЕНТ"
                           Style="{StaticResource ActionWindowTextBlock}"/>
                <ComboBox Name="StudentComboBox" DropDownClosed="StudentComboBox_DropDownClosed"/>
                <TextBlock Text="ДИСЦИПЛИНА"
                           Style="{StaticResource ActionWindowTextBlock}"/>
                <ComboBox Name="DisciplineComboBox" DropDownClosed="DisciplineComboBox_DropDownClosed"/>
                <TextBlock Text="ИЗМЕНЯЕМАЯ ОЦЕНКА"
                           Style="{StaticResource ActionWindowTextBlock}"/>
                <ComboBox Name="GradeIdComboBox" DropDownClosed="GradeIdComboBox_DropDownClosed"/>
                <TextBlock Text="ОЦЕНКА"
                           Style="{StaticResource ActionWindowTextBlock}"/>
                <ComboBox Name="GradeComboBox" DropDownClosed="GradeComboBox_DropDownClosed">
                    <TextBlock Text="2"
                               Foreground="Red"/>
                    <TextBlock Text="3"
                               Foreground="Orange"/>
                    <TextBlock Text="4"
                               Foreground="Green"/>
                    <TextBlock Text="5"
                               Foreground="BlueViolet"/>
                </ComboBox>
                <TextBlock Text="ДАТА"
                           Style="{StaticResource ActionWindowTextBlock}"/>
                <DatePicker Name="DatePick" CalendarClosed="DatePick_CalendarClosed" >
                </DatePicker>
                <Button Name="ReadyButton" 
                        Click="ReadyButton_Click"
                        Style="{StaticResource EditReadyButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
