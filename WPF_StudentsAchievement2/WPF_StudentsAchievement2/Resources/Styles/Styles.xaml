    <ImageBrush x:Key="HideButtonImage" 
                    ImageSource="\Resources\Images\HideButton_Icon.png" 
                    Stretch="Uniform"/>
    <ImageBrush x:Key="ExitButtonImage"
                    ImageSource="\Resources\Images\ExitButton_Icon.png" 
                    Stretch="Uniform"/>
    <ImageBrush x:Key="HideButtonImageActive" 
                    ImageSource="\Resources\Images\HideButton_Icon_Active.png" 
                    Stretch="Uniform"/>
    <ImageBrush x:Key="ExitButtonImageActive"
                    ImageSource="\Resources\Images\ExitButton_Icon_Active.png" 
                    Stretch="Uniform"/>
    <ImageBrush x:Key="HideButtonImagePressed" 
                    ImageSource="\Resources\Images\HideButton_Icon_Pressed.png" 
                    Stretch="Uniform"/>
    <ImageBrush x:Key="ExitButtonImagePressed" 
                    ImageSource="\Resources\Images\ExitButton_Icon_Pressed.png" 
                    Stretch="Uniform"/>
    <ImageBrush x:Key="WorkWindowTitleImage" 
                    ImageSource="\Resources\Images\WorkWindowTitle.png" 
                    Stretch="Uniform"/>
    <ImageBrush x:Key="WorkWindowTitleImage_Light" 
                    ImageSource="\Resources\Images\WorkWindowTitle_Light.png" 
                    Stretch="Uniform"/>
    <!--Главное название-->
    <Style x:Key="WorkWindowTitle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource WorkWindowTitleImage}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="WorkWindowTitle" 
                                Background="{TemplateBinding Background}" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" TargetName="WorkWindowTitle" Value="{StaticResource WorkWindowTitleImage_Light}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--Свернуть-->
    <Style x:Key="HideButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource HideButtonImage}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="HideButton" 
                                Background="{TemplateBinding Background}" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" TargetName="HideButton" Value="{StaticResource HideButtonImageActive}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter Property="Background" TargetName="HideButton" Value="{StaticResource HideButtonImagePressed}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Закрыть-->
    <Style x:Key="ExitButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource ExitButtonImage}"/>
