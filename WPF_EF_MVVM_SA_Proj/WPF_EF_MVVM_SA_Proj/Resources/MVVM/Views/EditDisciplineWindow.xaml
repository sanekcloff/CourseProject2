<Window x:Class="WPF_EF_MVVM_SA_Proj.Resources.MVVM.Views.EditDisciplineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_EF_MVVM_SA_Proj.Resources.MVVM.Views"
        xmlns:viewModels="clr-namespace:WPF_EF_MVVM_SA_Proj.Resources.MVVM.ViewModels"
        mc:Ignorable="d"
        Title="EditDisciplineWindow" Height="400" Width="300" x:Name="EditDisciplineWnd">
    <Window.DataContext>
        <viewModels:DataManageVM/>
    </Window.DataContext>
    <Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center">
                <TextBlock Text="НОВАЯ ДИСЦИПЛИНА"
                           Style="{StaticResource ActionWindowTextBlock}"/>
                <TextBox Name="DisciplineTextBox"
                         MaxLength="50"
                         Text="{Binding DisciplineName}"/>
                <Button Name="DisciplineReadyButton" 
                        Style="{StaticResource EditReadyButton}"
                        Command="{Binding EditDiscipline}"
                        CommandParameter="{Binding ElementName=EditDisciplineWnd}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
